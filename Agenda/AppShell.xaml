<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Agenda.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Agenda"
    Shell.FlyoutBehavior="Disabled">

    <TabBar> <!--Creates the tab bar which will allow navigation to between the schedule and settings pages-->
        <Tab Title="Schedule">
            <ShellContent ContentTemplate="{DataTemplate local:SchedulePage}"/>
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}"/>
        </Tab>
    </TabBar>

</Shell>
